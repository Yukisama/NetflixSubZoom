{
  "manifest_version": 2,
  "name": "Netflix Subtitle Zoom",
  "version": "1.0.0",
  "author": "Yuki GUO",
  "homepage_url": "https://github.com/Yukisama/NetflixSubZoom",
  "developer": {
    "name": "Yuki GUO",
    "url": "https://github.com/Yukisama/NetflixSubZoom"
  },
  "applications": {
    "gecko": {
      "id": "NetflixSubtitleZoom@yuki",
      "strict_min_version": "56.0"
    }
  },
  "description": "Adjust Netflix subtitle zoom for \"Image type subtitle\".\nNo effect of \"Text type subtitle\", it should be setting on: https://www.netflix.com/SubtitlePreferences ",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon48.png",
    "32": "icons/icon96.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "permissions": [
    "*://*.netflix.com/*",
    "tabs",
    "activeTab",
    "storage",
    "webNavigation"
  ],
  "background": {
    "scripts": [
      "common.js",
      "background.js"
    ]
  },
  "content_scripts": [{
    "js": [
      "common.js",
      "content.js"
    ],
    "matches": [
      "*://*.netflix.com/*"
    ],
    "all_frames": true
  }],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon48.png",
      "32": "icons/icon96.png"
    },
    "default_title": "Netflix Subtitle Zoom"
  }
}